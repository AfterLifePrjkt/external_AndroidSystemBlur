<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="blurRadius" format="integer" />
    <attr name="backgroundColour" format="color" />
    <attr name="blurBackgroundColourOpacity" format="float" />
    <attr name="cornerRadius" format="dimension" />
    <attr name="cornerRadiusTopLeft" format="dimension" />
    <attr name="cornerRadiusTopRight" format="dimension" />
    <attr name="cornerRadiusBottomLeft" format="dimension" />
    <attr name="cornerRadiusBottomRight" format="dimension" />
    <attr name="clipToOutline" format="boolean" />

    <declare-styleable name="WindowBlurLinearLayout">
        <attr name="blurRadius" />
        <attr name="backgroundColour" />
        <attr name="blurBackgroundColourOpacity" />
        <attr name="cornerRadius" />
        <attr name="cornerRadiusTopLeft" />
        <attr name="cornerRadiusTopRight" />
        <attr name="cornerRadiusBottomLeft" />
        <attr name="cornerRadiusBottomRight" />
        <attr name="clipToOutline" />
    </declare-styleable>

    <declare-styleable name="WindowBlurFrameLayout">
        <attr name="blurRadius" />
        <attr name="backgroundColour" />
        <attr name="blurBackgroundColourOpacity" />
        <attr name="cornerRadius" />
        <attr name="cornerRadiusTopLeft" />
        <attr name="cornerRadiusTopRight" />
        <attr name="cornerRadiusBottomLeft" />
        <attr name="cornerRadiusBottomRight" />
        <attr name="clipToOutline" />
    </declare-styleable>
</resources>